{
    "private": true,
    "scripts": {
        "format:php": "prettier --config=.prettierrc --write --parser=php",
        "format:controllers": "npm run format:php ./app/Http/Controllers/**/*.php",
        "heroku-build": "php artisan migrate && php artisan cache:clear && chmod -R 755 public && chmod -R 755 storage"
    },
    "post-install-cmd": [
        "php artisan migrate",
        "php artisan cache:clear",
        "php artisan clear-compiled",
        "chmod -R 755 public",
        "chmod -R 755 storage",
        "php artisan passport:keys"
    ],
    "devDependencies": {
        "@prettier/plugin-php": "^0.18.9",
        "prettier": "^2.7.1"
    }
}
